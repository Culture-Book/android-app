<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.CultureBook" parent="Theme.AppCompat.DayNight.NoActionBar" />

    <style name="Theme.CultureBook.Splash" parent="Theme.SplashScreen">
        <!-- Set the splash screen background, animated icon, and animation duration. -->
        <item name="windowSplashScreenBackground">@color/_surface</item>

        <!-- Use windowSplashScreenAnimatedIcon to add either a drawable or an
             animated drawable. One of these is required. -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/logo_anim</item>
        <!-- Required for animated icons -->
        <item name="windowSplashScreenAnimationDuration">1000</item>

        <!-- Set the theme of the Activity that directly follows your splash screen. -->
        <!-- Required -->
        <item name="postSplashScreenTheme">@style/Theme.CultureBook</item>
    </style>
</resources>